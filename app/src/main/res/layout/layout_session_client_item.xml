<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/register_icon_scale"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_user" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/item_main_text"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/item_additional_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_summary"
        android:textStyle="italic"
        android:maxLines="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/reserve_icon"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/register_icon_scale"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_session_reserve_grey" />

    <ImageView
        android:id="@+id/attendance_icon"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/register_icon_scale"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tick_grey" />


</LinearLayout>

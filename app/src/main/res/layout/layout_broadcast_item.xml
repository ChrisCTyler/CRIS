<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_broadcast_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sent_icon"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/register_icon_scale"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tick_grey" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_main_text"
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/item_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:textSize="@dimen/text_size_summary"
            android:textStyle="italic"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/item_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:textSize="@dimen/text_size_summary"
            android:textStyle="italic"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_send_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_summary"
            android:textStyle="italic"
            android:maxLines="1"
            android:textColor="@color/red"/>

        <Spinner
            android:id="@+id/message_type_spinner"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />

    </LinearLayout>



</LinearLayout>
